<?xml version="1.0" encoding="utf-8"?>
<!-- Backup rules for BulkSMS (Android 14 compatible) -->
<full-backup-content>

    <!-- Allow safe user preferences -->
    <include domain="sharedpref" path="user_prefs.xml" />
    <include domain="sharedpref" path="app_settings.xml" />

    <!-- Exclude sensitive or transient data -->
    <exclude domain="file" />
    <exclude domain="external" />
    <exclude domain="sharedpref" />
    <exclude domain="database" />

</full-backup-content>
